{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "PROJECT_NAME-v-PROJECT_VERSION"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "PROJECT_NAME",
      "deployment": "PROJECT_VERSION"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "PROJECT_NAME",
          "deployment": "PROJECT_VERSION"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "PROJECT_NAME",
            "image": "us.gcr.io/dray-app/PROJECT_NAME:PROJECT_VERSION",
            "command": [
                "./start.sh"
            ],
            "env": [
              {
                "name": "DOMAINS",
                "value": "app.staging.paradesystems.com lineage-test-stage.drayapp.com"
              },
              {
                "name": "EMAIL",
                "value": "anthony@draytechnologies.com"
              },
              {
                "name": "NAMESPACE",
                "value": "stage"
              },
              {
                "name": "LETSENCRYPT_ENDPOINT",
                "value": "https://acme-staging.api.letsencrypt.org/directory"
              }
            ],
            "ports": [
              {
                "containerPort": 80
              }
            ],
            "resources": {
              "requests": {
                "memory": "96Mi",
                "cpu": "10m"
              },
              "limits": {
                "memory": "192Mi",
                "cpu": "150m"
              }
            }
          }
        ]
      }
    }
  }
}
